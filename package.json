{
  "name": "minze",
  "private": true,
  "version": "1.0.0",
  "description": "Minze api server",
  "engines": {
    "node": "10.16"
  },
  "keywords": [
    "server"
  ],
  "scripts": {
    "prestart": "./scripts/build.sh",
    "build": "npm-run-all build:*",
    "test": "npm-run-all test:*",
    "build:client": "yarn workspace minze-client build",
    "build:server": "yarn workspace minze-server build",
    "test:server": "yarn workspace minze-server test",
    "start": "pm2 start pm2.yaml",
    "start:node": "./scripts/build.sh; node ./build/index.js",
    "stop": "pm2 stop all",
    "heroku:release": "git push heroku master",
    "pm2log": "pm2 logs --raw"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn workspace minze-server precommit; yarn workspace minze-client precommit;"
    }
  },
  "dependencies": {
    "husky": "^3.0.9",
    "pm2": "^3.5.1"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5"
  },
  "workspaces": {
    "packages": [
      "minze-client",
      "minze-server"
    ],
    "nohoist": [
      "**/husky"
    ]
  }
}
