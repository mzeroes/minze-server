{
  "name": "minze",
  "private": true,
  "version": "1.0.0",
  "description": "Minze Mono Repo",
  "keywords": [
    "server",
    "web",
    "mobile"
  ],
  "scripts": {
    "clean": "lerna run clean --scope minze-*; rm -rf ./packages/*/node_modules",
    "reset": "yarn run clean; yarn clean-locks",
    "bootstrap": "lerna bootstrap",
    "clean-locks": "rm -rf ./packages/*/yarn.lock",
    "setup": "lerna run setup:production --scope minze-*",
    "build": "lerna run build --scope minze-*; ./scripts/build.sh",
    "test": "lerna run test --scope minze-*",
    "start": "lerna run start --scope minze-*",
    "start:node": "node ./build/index.js",
    "pm2:start": "pm2 start pm2.yaml",
    "pm2:stop": "pm2 stop all",
    "pm2:logs": "pm2 logs --raw"
  },
  "dependencies": {
    "pm2": "^3.5.1"
  },
  "devDependencies": {
    "lerna": "^3.18.3",
    "npm-run-all": "4.1.5"
  },
  "resolutions": {
    "@types/react": "16.8.22"
  },
  "workspaces": [
    "packages/*"
  ]
}
