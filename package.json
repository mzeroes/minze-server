{
  "name": "minze",
  "private": true,
  "version": "1.0.0",
  "description": "Minze Mono Repo",
  "keywords": [
    "server",
    "web",
    "mobile"
  ],
  "scripts": {
    "clean": "rm -rf ./packages/*/node_modules",
    "clean-locks": "rm -rf ./packages/*/yarn.lock",
    "bootstrap": "lerna bootstrap",
    "reset": "yarn clean ; yarn clean-locks ; yarn bootstrap",
    "prepare": "./scripts/build.sh",
    "build": "npm-run-all build:*",
    "build:client": "lerna run build --scope minze-web",
    "build:server": "lerna run build --scope minze-server",
    "start": "npm-run-all start:*",
    "start:client": "lerna run start --scope minze-web",
    "start:server": "lerna run start:dev --scope minze-server",
    "start:node": "node ./build/index.js",
    "pm2:start": "pm2 start pm2.yaml",
    "pm2:stop": "pm2 stop all",
    "pm2:logs": "pm2 logs --raw"
  },
  "dependencies": {
    "husky": "^3.0.9",
    "pm2": "^3.5.1"
  },
  "devDependencies": {
    "lerna": "^3.18.3",
    "npm-run-all": "4.1.5"
  },
  "resolutions": {
    "@types/react": "16.8.22"
  },
  "workspaces": [
    "packages/*"
  ],
  "nohoist": [
    "**/husky"
  ]
}
