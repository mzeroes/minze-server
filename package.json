{
  "name": "server",
  "version": "1.0.0",
  "description": "Api Server",
  "main": "./dist/index.js",
  "scripts": {
    "postinstall": "npx tsc",
    "start": "npx pm2 start pm2.yaml",
    "kill-process": "docker kill (docker ps -aq); and docker rm (docker ps -aq)",
    "compose-up": "cd database; docker-compose up -d",
    "prisma-deploy": "cd database; prisma deploy",
    "stop": "npx pm2 stop all",
    "pm2log": "npx pm2 logs --raw",
    "dev:ts": "npx ts-node-dev --no-notify --respawn --transpileOnly ./src",
    "dev": "tsc-watch --onSuccess \"node ./dist/index.js\"",
    "testServer": "tsc-watch --onSuccess \"node ./dist/index.js\"",
    "test": "npx concurrently --success=\"first\" --kill-others \"npm run testServer\" \"sleep 24s ; jest --coverage --verbose\"",
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npx eslint . --ext .ts --fix"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "server"
  ],
  "author": "Shubham Jain <s.shubjain@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "babel-plugin-module-resolver": "^3.2.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^5.0.0-alpha.7",
    "firebase": "^5.9.4",
    "firebase-admin": "^7.2.0",
    "firebase-functions": "^2.2.1",
    "graphql": "^0.13.0",
    "graphql-middleware": "^3.0.2",
    "graphql-shield": "^5.3.5",
    "graphql-yoga": "^1.17.4",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^0.11.6",
    "nexus-prisma": "^0.3.5",
    "pg": "^7.9.0",
    "pm2": "^3.4.0",
    "prisma-client-lib": "^1.30.1",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "serverless-http": "^1.9.1",
    "supertest": "^4.0.0",
    "swagger-ui-express": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@firebase/app-types": "0.x",
    "@firebase/util": "0.x",
    "@types/aws-lambda": "^8.10.23",
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/graphql": "^14.0.7",
    "@types/jest": "^24.0.11",
    "@types/mongoose": "^5.3.22",
    "@types/node": "^11.11.3",
    "@types/request-promise": "^4.1.42",
    "@types/serverless": "^1.18.2",
    "@types/supertest": "^2.0.7",
    "@types/swagger-ui-express": "^3.0.0",
    "@types/ws": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-import-resolver-babel-module": "^5.0.1",
    "eslint-plugin-import": "^2.17.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.5.0",
    "prettier": "^1.17.0",
    "serverless-google-cloudfunctions": "^2.3.2",
    "ts-jest": "^24.0.0",
    "ts-node-dev": "1.0.0-pre.35",
    "tsc-watch": "^2.1.2",
    "tslint": "^5.14.0",
    "typescript": "^3.3.4000"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
